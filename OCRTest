import os
from PIL import Image

TRAIN = 1
TEST = 0

def PreprocessIm(imname):
    # Convert the image into gray scale
    im = Image.open(imname).convert('L');
    # Binarize the image

def ReadIm(dirpath):
    filelist = []
    files = os.listdir(dirpath)

    for f in files:
        if os.path.isdir(dirpath + '/' + f):
            print('%s is a directory. Passed' % (dirpath + '/' + f))
        elif os.path.isfile(dirpath + '/' + f):
            filelist.append(f)

    # Pre-process images
    for fname in filelist:
        PreprocessIm(fname)

